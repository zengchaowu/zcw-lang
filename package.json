{
  "name": "zcw-lang",
  "version": "1.1.0",
  "description": "自定义DSL语言，后缀为zcw - TypeScript版本",
  "main": "dist/index.js",
  "bin": {
    "zcw": "dist/zcw"
  },
  "files": [
    "dist/zcw",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && pnpm bundle",
    "start": "node dist/index.js",
    "dev": "pnpm build && node dist/index.js",
    "test": "pnpm build && node dist/test.js",
    "clean": "rm -rf dist",
    "install:all": "pnpm install",
    "prepublishOnly": "pnpm build",
    "publish:patch": "npx tsx scripts/publish.ts patch",
    "publish:minor": "npx tsx scripts/publish.ts minor",
    "publish:major": "npx tsx scripts/publish.ts major",
    "publish:prerelease": "npx tsx scripts/publish.ts prerelease",
    "bundle": "esbuild src/cli.ts --bundle --platform=node --target=node16 --outfile=dist/zcw --format=cjs --external:node:*",
    "bundle:win": "esbuild src/cli.ts --bundle --platform=node --target=node16 --outfile=dist/zcw.exe --format=esm --external:node:*"
  },
  "keywords": [
    "dsl",
    "language",
    "interpreter",
    "typescript",
    "cli",
    "zcw"
  ],
  "author": "zcw",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "esbuild": "^0.25.9",
    "typescript": "^5.0.0",
    "zcw-shared": "^1.15.0"
  }
}
